<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/backApp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="Mitos vs Realidad"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:drawablePadding="10dp"
            android:layout_marginTop="22dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#FFFABC">
            <LinearLayout android:orientation="vertical" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:text="⚠️ Verdades Universales" android:textStyle="bold" android:textColor="#C62828" android:textSize="18sp" android:layout_marginBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:text="• El consentimiento se puede retirar en cualquier momento.\n• Tu cuerpo es tuyo.\n• Debes ir al médico anual (hombres y mujeres).\n• El alcohol EMPEORA el juicio y el desempeño sexual." android:textColor="#5D4037" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:text="❌ MITO: Lavarse, Limón, Coca-Cola o Tés evitan embarazo." android:padding="16dp" android:background="#FFEBEE" android:textColor="@color/alertRed" android:textStyle="bold" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <TextView android:text="✅ REALIDAD: Falso y peligroso. El esperma nada muy rápido hacia el útero. Introducir líquidos causa infecciones graves." android:padding="16dp" android:background="#E8F5E9" android:textColor="#2E7D32" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:text="❌ MITO: Si estoy arriba, salto después o lo hago en agua, no me embarazo." android:padding="16dp" android:background="#FFEBEE" android:textColor="@color/alertRed" android:textStyle="bold" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <TextView android:text="✅ REALIDAD: La gravedad NO detiene a los espermatozoides. El agua de piscina no entra lo suficiente para matarlos." android:padding="16dp" android:background="#E8F5E9" android:textColor="#2E7D32" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:text="❌ MITO: Primera vez, menstruación o sin orgasmo = Seguro." android:padding="16dp" android:background="#FFEBEE" android:textColor="@color/alertRed" android:textStyle="bold" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <TextView android:text="✅ REALIDAD: La fertilidad no depende de la experiencia ni del placer. El esperma vive 5 días, así que la regla no protege 100%." android:padding="16dp" android:background="#E8F5E9" android:textColor="#2E7D32" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:text="❌ MITO: Doble condón o Coito interrumpido." android:padding="16dp" android:background="#FFEBEE" android:textColor="@color/alertRed" android:textStyle="bold" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <TextView android:text="✅ REALIDAD: Doble condón causa fricción y ruptura. El líquido preseminal tiene esperma. El sexo anal no embaraza pero transmite ETS." android:padding="16dp" android:background="#E8F5E9" android:textColor="#2E7D32" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>