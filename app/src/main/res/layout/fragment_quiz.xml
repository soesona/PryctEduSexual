<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backApp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:id="@+id/layoutMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="visible">

            <TextView
                android:text="Cuestionarios"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/purpleText"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:padding="20dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_trophy"
                            app:tint="#FFC107"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="10dp"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="NIVEL DE MAESTRÃA"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#757575"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvTotalScoreMenu"
                                android:text="0 pts"
                                android:textSize="34sp"
                                android:textStyle="bold"
                                android:textColor="#FF9800"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEE"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"/>

                    <GridLayout
                        android:columnCount="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvRecordMetodos"
                            android:text="ðŸ’Š MÃ©todos: 0"
                            android:textSize="16sp"
                            android:textColor="#555"
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:padding="5dp"/>

                        <TextView
                            android:id="@+id/tvRecordEts"
                            android:text="ðŸ¦  ETS: 0"
                            android:textSize="16sp"
                            android:textColor="#555"
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:padding="5dp"/>

                        <TextView
                            android:id="@+id/tvRecordMitos"
                            android:text="ðŸ§  Mitos: 0"
                            android:textSize="16sp"
                            android:textColor="#555"
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:padding="5dp"/>

                        <TextView
                            android:id="@+id/tvRecordGeneral"
                            android:text="ðŸ† General: 0"
                            android:textSize="16sp"
                            android:textColor="#555"
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:padding="5dp"/>
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnJugarMetodos"
                android:text="MÃ©todos de planificaciÃ³n"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000"
                app:icon="@drawable/ic_pills"
                app:iconSize="28dp"
                app:iconTint="#FF9800"
                android:padding="15dp"
                android:textSize="16dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnJugarEts"
                android:text="Enfermedades ETS"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000"
                app:icon="@drawable/ic_stds"
                app:iconSize="28dp"
                app:iconTint="#E91E63"
                android:textSize="16dp"
                android:padding="15dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnJugarMitos"
                android:text="Mitos VS Realidad"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000"
                app:icon="@drawable/ic_doctor"
                app:iconTint="#673AB7"
                android:textSize="16dp"
                app:iconSize="28dp"
                android:padding="15dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnJugarGeneral"
                android:text="General"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000"
                app:icon="@drawable/ic_general"
                app:iconTint="#018377"
                android:textSize="16dp"
                app:iconSize="28dp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutJuego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvTituloCategoria"
                android:text="Quiz"
                android:textColor="@color/purpleText"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ProgressBar
                android:id="@+id/progressBarQuiz"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="0"
                android:layout_marginBottom="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">
                <TextView
                    android:id="@+id/tvPreguntaJuego"
                    android:text="Cargando pregunta..."
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:gravity="center"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/layoutBotonesRespuesta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button android:id="@+id/btnVerdadero" android:text="VERDADERO" android:backgroundTint="#4CAF50" android:padding="15dp" android:layout_marginBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <Button android:id="@+id/btnFalso" android:text="FALSO" android:backgroundTint="#F44336" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp">
                <LinearLayout
                    android:padding="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView android:id="@+id/tvFeedbackTitulo" android:text="Respuesta" android:textSize="20sp" android:textStyle="bold" android:layout_marginBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:id="@+id/tvFeedbackCuerpo" android:text="ExplicaciÃ³n..." android:textSize="16sp" android:layout_marginBottom="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <Button android:id="@+id/btnSiguientePregunta" android:text="Siguiente" android:backgroundTint="#6200EE" android:layout_gravity="end" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnSalirJuego"
                android:text="Cancelar / Salir"
                android:textColor="#757575"
                android:backgroundTint="#E0E0E0"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>