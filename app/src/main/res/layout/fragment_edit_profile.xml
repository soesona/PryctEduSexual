<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backApp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="28dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/purpleText"
            android:textSize="28sp"
            android:layout_marginTop="35dp"

            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EF929292"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="27dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_field"
            android:padding="12dp"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_userpfp"
                android:layout_marginEnd="12dp"
                app:tint="@color/pinkText" />

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nombre completo"
                android:textColor="@color/black"
                android:textColorHint="@color/pinkPastel"
                android:background="@android:color/transparent"
                android:padding="4dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_field"
            android:padding="12dp"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar"
                android:layout_marginEnd="12dp"
                app:tint="@color/pinkText" />

            <EditText
                android:id="@+id/etBirthdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Fecha de nacimiento"
                android:focusable="false"
                android:textColor="@color/black"
                android:textColorHint="@color/pinkPastel"
                android:background="@android:color/transparent"
                android:padding="4dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_field"
            android:padding="12dp"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_pass"
                android:layout_marginEnd="12dp"
                app:tint="@color/pinkText" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/pinkPastel"
                android:background="@android:color/transparent"
                android:padding="4dp" />
        </LinearLayout>


        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar cambios"
            android:textColor="@color/white"
            android:backgroundTint="@color/pinkPastel"
            android:padding="14dp"
            android:textSize="16sp"
            android:layout_marginBottom="32dp" />
    </LinearLayout>
</ScrollView>
